@model Domain.Entities.EventInfo
@*@model WebUI.Models.EventInfoModel*@
@using WebUI.Context
@using WebUI.Models

<div class="row">
    <div class="col-md-5"><img src="@Model.LogoUrl" alt="" class="img-responsive"></div>
    <div class="col-md-4"><h3>@Model.Title</h3></div>
    <div class="col-md-3"><h4 class="text-center">Дата проведения:<b><br><br>@Model.StartDate.ToShortDateString() - @Model.EndDate.ToShortDateString()</b></h4></div>
</div>


<div class="row">
    <div class="col-md-12"><p class="lead text-center">@Model.ShortDescription</p></div>
    <div class="col-md-12">
        @*<p class="text-justify">@Model.LongDescription</p>*@
        @if (Model.LongDescription != null)
        {
            foreach (var text in Model.LongDescription.Split('|'))
            {
                @text;
                <br />
            }
        }
    </div>
</div>

<div>
    @if (UserContext.Current.CurrentUser != null)
    {

        @Html.Action("AddNewEventReview", "EventReview", new { eventInf = Model })
        @*@Html.Action("AddNewEventReview", "EventReview")*@
    
    @*@Html.Partial("~/Views/EventReview/AddNewEventReview.cshtml", new EventReviewModel())*@
    }

</div>





