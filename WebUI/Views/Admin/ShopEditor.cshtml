@model IEnumerable<Domain.Entities.ShopInfo>
@{
    ViewBag.Title = "ShopEditor";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


    <div class="col-md-12">
        <button type="button" class="btn btn-primary" onclick="location.href='@Url.Action("CreateNewShop", "Admin" )'">+ Создать новый магазин</button>
    </div>


    <div class="row">
        <div class="col-md-12">
            <div class="panel list-panel" id="list-panel">

                <div class="panel-body">
                    <table id="assets-data-table"
                           class="table table-striped table-bordered table-condensed"
                           style="width:100%">
                        <thead style="background-color:#18bc9c">
                            <tr class="text-uppercase">
                                <th style="vertical-align:middle" class="text-center">Наименование магизина</th>
                                <th style="vertical-align:middle" class="text-center">Краткое опиание</th>
                                <th> </th>
                                <th> </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>                                    
                                    <td style="vertical-align:middle">@item.Name</td>
                                    <td style="vertical-align:middle">@item.ShortDescription</td>                                    
                                    <td style="vertical-align:middle"><button type="button" class="btn btn-primary btn-sm" onclick="location.href='@Url.Action("SelectedShopEditor", "Admin", new {ShopInfoId = @item.ShopInfoId} )'">Редактировать</button></td>
                                    <td style="vertical-align:middle"><button type="button" class="btn btn-warning btn-sm" onclick="location.href='@Url.Action("DeleteShop", "Admin", new {ShopInfoId = @item.ShopInfoId})'">Удалить</button></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    