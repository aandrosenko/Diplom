@model WebUI.Models.ShopInfoModel
@{
    ViewBag.Title = "CreateNewShop";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Новый магазин</h2>

    @using (Html.BeginForm())
    {
        @Html.LabelFor(model => model.Name, "Название магазина")
        <br />
        @Html.EditorFor(model => model.Name)
        <br /><br />
        @Html.LabelFor(model => model.ShortDescription, "Краткое описание")
        <br />
        @Html.EditorFor(model => model.ShortDescription)
        <br /><br />
        @Html.LabelFor(model => model.Description, "Полное описание")
        <br />
        @Html.EditorFor(model => model.Description)
        <br /><br />

        <input type="submit" value="Добавить" />
    }



