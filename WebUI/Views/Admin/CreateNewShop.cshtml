@model WebUI.Models.ShopInfoModel
@{
    ViewBag.Title = "CreateNewShop";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Новый магазин</h2>

@using (Html.BeginForm("CreateNewShop", "Admin", FormMethod.Post, new { @class = "form" }))
{

    <div class="form-group">
        @Html.LabelFor(model => model.Name, "Название магазина", new { @class = "col-md-2 control-label" })        
        <div class="col-md-10">
            @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "col-md-10 form-control" } })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.ShortDescription, "Краткое описание", new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextAreaFor(model => model.ShortDescription, new { @class = "col-md-10 form-control ", rows = 5} )
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Description, "Полное описание", new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "col-md-10 form-control ", rows = 10 } })
        </div>
    </div>

        <input type="submit" value="Добавить" />


        }



